/* pages/Myinfo/Myinfo.wxss */

.list-wrap {
   width: 100%;
   background: #efefef;
   padding-bottom: 30rpx;
   padding-top: 30rpx;
}

/* 个人图像（权限） */
.index_user {
  text-align: center;
  position: relative;
  margin: 26rpx auto;
}
.index_user>image{
    width: 126rpx;
    height: 126rpx;
    border: 4rpx solid #fff;
    border-radius: 50%;
    background: #fff;
    margin-bottom: 4rpx;
    box-sizing: border-box;
}
.userinfo_btn {
  width: 126rpx;
  height: 126rpx;
  position: absolute;
  background: transparent;
  left: 50%;
  margin-left: -63rpx;
}

.list-item {
   background: #fff;
   margin-bottom: 30rpx;
}

.list-item:last-child {
   margin: 0;
}

.item {
   flex: 1;
}

.desc-highlight {
   font-size: 24rpx;
   height: 38rpx;
   padding: 0 22rpx;
   border: 1px solid #f5342f;
   border-radius: 20rpx;
   color: #f5342f;
   line-height: 38rpx;
}
